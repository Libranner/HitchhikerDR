= form_for @trip do |f|
  - if @trip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trip.errors.count, "error")} prohibited this trip from being saved:"
      %ul
        - @trip.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :from
    = f.text_field :from
  .field
    = f.label :to
    = f.text_field :to
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :frequency
    = f.text_field :frequency
  .field
    = f.label :conditions
    = f.text_field :conditions
  .field
    = f.label :departure
    = f.text_field :departure
  .field
    = f.label :arrive
    = f.text_field :arrive
  .actions
    = f.submit 'Save'
